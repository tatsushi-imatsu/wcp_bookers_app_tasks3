<!DOCTYPE html>
<html>
  <head>
    <title>Bookers</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <% if user_signed_in? %>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <li><i class="fas fa-home nav-link text-light"><%= link_to "Home", user_path(current_user.id), class: 'text-light' %></i></li>
              <li><i class="fas fa-users nav-link text-light"><%= link_to "Users", users_path, class: 'text-light' %></i></li>
              <li><i class="fas fa-book-open nav-link text-light"><%= link_to "books", books_path, class: 'text-light' %></i></li>
              <li><i class="fas fa-sign-out-alt nav-link text-light"><%= link_to "logout", destroy_user_session_path, method: :delete, class: 'text-light' %></i></li>
            </ul>
         </div>
        </div>
    </nav>
    </header>
     <% else %>
     <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/"><span>Bookers</span></a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
         <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
      <li><i class="fas fa-home nav-link text-light"><%= link_to "Home", root_path, class: 'text-light' %></i></li>
      <li><i class="fas fa-link nav-link text-light"><%= link_to "About", "/home/about", class: 'text-light' %></i></li>
      <li><i class="fas fa-user-plus nav-link text-light"><%= link_to "sign up", new_user_registration_path, class: 'text-light' %></i></li>
      <li><i class="fas fa-sign-in-alt nav-link text-light"><%= link_to "login", new_user_session_path, class: 'text-light' %></i></li>
            </ul>
         </div>
       </div>
     </nav>
    <% end %>
    <%if flash[:notice] %>
    <%= flash[:notice] %>
    <% end %>
    <%= yield %>
    <br>
    <foooter>
      <div class="container mt-5">
  	<div class="row">
    	<div class="mx-auto">
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
  </foooter>
  </body>
</html>