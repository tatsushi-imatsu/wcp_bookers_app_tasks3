<%= render 'layouts/flash_messages' %>
<div class="container">
<div class="row">
<div class="col-md-3">
<%= render 'users/list', user: @book.user %>
  </div>
  <div class="col-md-8 offset-md-1">
<h1>Book detail</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        <tr>
            <td>
              <%= link_to user_path(@book.user) do %>
                <%= attachment_image_tag @book.user, :profile_image, size:"60x60", fallback: "PngItem_1503945.png" %><br><%= @book.user.name %>
              <% end %>
            </td>
            <td><%= @book.user.name %></td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user_id == current_user.id %>
              <td><%= link_to "Edit",  edit_book_path(@book), class:"btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-sm btn-danger" %></td>
            <% end %>
        </tr>

    </tbody>
</table>
</div>
</div>  <!-- この行を追加 -->
</div>