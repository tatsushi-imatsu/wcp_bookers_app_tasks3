<%= render 'layouts/flash_messages' %>
<div class="container">
  <div class="row">
<div class="col-md-3">
 <%= render 'users/list', user: @user %>
 </div>
  <div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
        </tr>
    </thead>
    <tbody>
         <% @books.each do |book| %>
        <tr>
            <td><%= link_to user_path(book.user_id) do %>
            <%= attachment_image_tag @user, :profile_image, size:"60x60", fallback: "PngItem_1503945.png" %>
            <% end %>
            </td>
            <td><%= link_to "#{book.title}", book_path(book.id) %></td>
            <td><%= book.body %></td>
        </tr>
        <% end %>
    </tbody>
</table>
</div>
</div>
</div>   