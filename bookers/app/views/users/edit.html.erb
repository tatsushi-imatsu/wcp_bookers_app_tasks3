<%= render 'layouts/error_user_messages', user: @user %>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
<h1>User info</h1>
<%= form_with model: @user, local:true do |f| %>
  <h4>Name</h4>
  <%= f.text_field :name %>
  
  <h4>Image</h4>
  <%= f.attachment_field :profile_image %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <br><%= f.submit 'Update User' %>
<% end %>
</div>
  </div>
    </div>