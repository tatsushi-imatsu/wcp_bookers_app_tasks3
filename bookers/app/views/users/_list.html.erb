<h1>User info</h1>
 <div>
  <%= attachment_image_tag user, :profile_image, size:"60x60", fallback: "PngItem_1503945.png" %>
  <p>Name：<%= user.name %></p>
  <p>Introduction：<%= user.introduction %></p>
  <p><%= link_to "", edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" %></p>
</div>

<h1>New book</h1>
<%= form_with model: Book.new, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <br><%= f.submit 'Create Book' %>

  <% end %>



